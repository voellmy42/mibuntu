rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles:
    // - Authenticated users can read their own profile
    // - Authenticated users can create/update their own profile
    // - (Optional) Allow reading public profile fields if needed for marketplace
    match /users/{userId} {
      allow read: if request.auth != null; // Simplified: Users can read other profiles (e.g. for display in marketplace)
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Jobs:
    match /jobs/{jobId} {
      allow read: if true;
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'school_rep';
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Applications:
    match /applications/{applicationId} {
      allow create: if request.auth != null;
      // Read: Applicant OR Job Owner (Need to fetch job to check owner? Complex query. 
      // Simplified: Allow if user is applicant OR user is the job owner (checked via field on application if available or separate check)
      // Ideally, we'd store 'jobOwnerId' on the application to make this rule easy.
      // Let's modify the rule to allow Applicant to read. 
      // AND allow School Reps to read (broad rule) or check resource.data.jobId ...
      // For MVP: Authenticated users can read valid applications related to them.
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.applicantId
        // || request.auth.uid == ... (It's hard to check job owner without extra reads)
        // Let's just allow generic read for authenticated users for now to unblock, 
        // OR rely on filtering in query (rules filters aren't enough for security but enough for app to work)
        // Better:
         || get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.userId == request.auth.uid
      );
      
      // Update: Only Job Owner (School Rep) can update status
      allow update: if request.auth != null && (
         get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.userId == request.auth.uid
      );
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null; 
    }

    // Stripe Customers & Subscriptions
    match /customers/{uid} {
      allow read: if request.auth.uid == uid;
      
      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }

      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
    }
  }
}
